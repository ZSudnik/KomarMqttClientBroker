<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <!--        <item name="colorAccent">@color/black</item>-->
        <!--        <item name="android:buttonTint">@color/black</item>-->
    </style>

    <style name="expanded_3_toolbar_title">
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">#F2F2F7</item>
        <item name="android:textSize">17dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="settings_certificate_item_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#76767A</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background" />
    </style>

    <style name="settings_certificate_item_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background" />
    </style>

    <style name="certificate_item_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="settings_certificate_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#3C3C43</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">9dp</item>
    </style>

    <style name="whatsNewKnowMoreButtonStyle">
        <item name="android:layout_width">156dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:backgroundTint">@color/card_button_bg</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_button_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
